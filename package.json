{
  "name": "@hydrofoil/shaperone",
  "private": true,
  "license": "MIT",
  "scripts": {
    "lint": "eslint . --ext .ts --quiet --ignore-path .gitignore --ignore-path .eslintignore",
    "build": "wsrun -m build",
    "test": "run-p test:*",
    "test:core": "BABEL_ENV=test c8 --all -o coverage/core --reporter=lcov mocha --recursive 'packages/core-tests/**/*.test.ts'",
    "test:open-wc": "karma start karma.conf.cjs --coverage",
    "test:open-wc:watch": "karma start karma.conf.cjs --auto-watch=true --single-run=false",
    "test:web": "web-test-runner",
    "release": "changeset publish",
    "docs": "docsify serve ./dist",
    "typedoc": "typedoc --watch",
    "postinstall": "yarn-deduplicate"
  },
  "workspaces": [
    "packages/*",
    "demos/*"
  ],
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-proposal-decorators": "^7.14.5",
    "@babel/preset-typescript": "^7.14.5",
    "@babel/register": "^7.14.5",
    "@changesets/cli": "^2.12.0",
    "@open-wc/building-webpack": "^2.13.32",
    "@rollup/plugin-commonjs": "^17.0.0",
    "@tpluscode/eslint-config": "^0.1.1",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "@web/dev-server-esbuild": "^0.2.12",
    "@web/dev-server-rollup": "^0.3.5",
    "@web/test-runner": "^0.13.15",
    "c8": "^7.1.2",
    "chai-snapshot-matcher": "^1.0.6",
    "docsify-cli": "^4.4.1",
    "es-dev-commonjs-transformer": "^0.2.0",
    "eslint": "^7.12.0",
    "eslint-config-standard": "^15.0.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-standard": "^4.0.2",
    "eslint-plugin-wc": "^1.2.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "lit-analyzer": "^1.2.1",
    "npm-run-all": "^4.1.5",
    "rdfjs-eds-plugin": "*",
    "readable-stream": "^3.6.0",
    "sinon": "^9.0.2",
    "sinon-chai": "^3.5.0",
    "standard": "^14.3.4",
    "ts-lit-plugin": "^1.2.1",
    "typedoc": "^0.20.34",
    "typescript": "^3.9.3",
    "web-component-analyzer": "^1.1.6",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^5.2.0",
    "wsrun": "^5.2.4",
    "yarn": "^1.22.4",
    "yarn-deduplicate": "^3.1.0"
  },
  "resolutions": {
    "@polymer/polymer": "3.4.1"
  },
  "mocha": {
    "watch-files": [
      "./**/*.ts"
    ],
    "require": [
      "test-setup.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && wsrun -m analyze && git add **/custom-elements.json **/README.md"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix --quiet"
    ]
  }
}
