{
  "name": "@hydrofoil/shaperone",
  "private": true,
  "license": "MIT",
  "scripts": {
    "lint": "eslint . --ext .ts --quiet --ignore-path .gitignore --ignore-path .eslintignore",
    "build": "lerna run build",
    "test": "run-p test:*",
    "test:mocha": "TS_NODE_TRANSPILE_ONLY=true c8 --all --reporter=lcov mocha packages/core/**/*.test.ts",
    "test:open-wc": "lerna run test"
  },
  "workspaces": [
    "packages/*",
    "demos/*"
  ],
  "dependencies": {
    "@changesets/cli": "^2.8.0",
    "@tpluscode/eslint-config": "^0.1.0",
    "@types/rdf-js": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^3.0.2",
    "@typescript-eslint/parser": "^3.0.2",
    "c8": "^7.1.2",
    "chai-snapshot-matcher": "^1.0.6",
    "eslint-plugin-import": "^2.20.2",
    "husky": "^4.2.5",
    "lerna": "^3.22.1",
    "lint-staged": "^10.2.11",
    "npm-run-all": "^4.1.5",
    "readable-stream": "^3.6.0",
    "sinon": "^9.0.2",
    "sinon-chai": "^3.5.0",
    "standard": "^14.3.4",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.3",
    "yarn": "^1.22.4"
  },
  "mocha": {
    "file": "test-setup.js",
    "watch-files": [
      "./**/*.ts"
    ],
    "require": [
      "ts-node/register",
      "chai-snapshot-matcher"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix --quiet"
    ]
  }
}
