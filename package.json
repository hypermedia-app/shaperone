{
  "name": "@hydrofoil/shaperone",
  "private": true,
  "license": "MIT",
  "scripts": {
    "lint": "eslint . --ext .ts --quiet --ignore-path .gitignore --ignore-path .eslintignore",
    "build": "lerna run --parallel build",
    "test": "run-p test:*",
    "test:core": "BABEL_ENV=test c8 --all -o coverage/core --reporter=lcov mocha --recursive 'packages/core/test/**/*.test.ts'",
    "test:shacl-path": "BABEL_ENV=test c8 --all -o coverage/shacl --reporter=lcov mocha --recursive 'packages/clownface-shacl-path/test/**/*.test.ts'",
    "test:open-wc": "karma start karma.conf.cjs --coverage",
    "test:open-wc:watch": "karma start karma.conf.cjs --auto-watch=true --single-run=false",
    "test:web": "web-test-runner",
    "release": "changeset publish",
    "docs": "docsify serve ./dist"
  },
  "workspaces": [
    "packages/*",
    "demos/*"
  ],
  "dependencies": {
    "@babel/plugin-proposal-class-properties": "^7.10.1",
    "@babel/plugin-proposal-decorators": "^7.10.3",
    "@babel/preset-typescript": "^7.12.7",
    "@babel/register": "^7.10.1",
    "@changesets/cli": "^2.12.0",
    "@open-wc/building-webpack": "^2.13.32",
    "@rollup/plugin-commonjs": "^17.0.0",
    "@tpluscode/eslint-config": "^0.1.1",
    "@types/rdf-js": "^4.0.0",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "@web/dev-server-esbuild": "^0.2.11",
    "@web/dev-server-rollup": "^0.3.2",
    "@web/test-runner": "^0.12.2",
    "c8": "^7.1.2",
    "chai-snapshot-matcher": "^1.0.6",
    "docsify-cli": "^4.4.1",
    "es-dev-commonjs-transformer": "^0.2.0",
    "eslint": "^7.12.0",
    "eslint-config-standard": "^15.0.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-standard": "^4.0.2",
    "eslint-plugin-wc": "^1.2.0",
    "husky": "^4.2.5",
    "lerna": "^3.22.1",
    "lint-staged": "^10.2.11",
    "lit-analyzer": "^1.2.1",
    "npm-run-all": "^4.1.5",
    "rdfjs-eds-plugin": "*",
    "readable-stream": "^3.6.0",
    "sinon": "^9.0.2",
    "sinon-chai": "^3.5.0",
    "standard": "^14.3.4",
    "ts-lit-plugin": "^1.2.1",
    "typedoc": "^0.20",
    "typescript": "^3.9.3",
    "web-component-analyzer": "^1.1.6",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^5.2.0",
    "yarn": "^1.22.4"
  },
  "resolutions": {
    "@polymer/polymer": "3.4.1"
  },
  "mocha": {
    "watch-files": [
      "./**/*.ts"
    ],
    "require": [
      "test-setup.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npx lerna run analyze && git add **/custom-elements.json **/README.md"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix --quiet"
    ]
  }
}
